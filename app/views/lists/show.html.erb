<div class="container">
  <h1><%= @list.name %></h1>

  <div class="m-3">
    <%= link_to "Add a bookmark to the List", new_list_bookmark_path(@list), class: "btn btn-primary" %>
  </div>
  <div class="m-3">
    <%= link_to "Delete this List", list_path(@list), class: "btn btn-primary", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" } %>
  </div>

  <div class="card mt-3" style="width: 18rem;">

    <% @list.movies.each do |movie| %>
      <div class="card-movie">

        <div class="movie-infos">
          <img class="card-img-top" <%= image_tag movie.poster_url %>
          <div class="card-body">
            <h3 class="card-text"><%= movie.title %> â€¢ <%= movie.rating %></h3>
            <p class="card-text"><%= movie.overview %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
